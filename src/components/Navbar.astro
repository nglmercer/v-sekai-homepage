---
import { Astronav, MenuItems, MenuIcon, Dropdown, DropdownItems, DropdownSubmenu } from "astro-navbar";
---

<header class="lg:flex justify-between p-5 gap-5 mx-auto container">
	<Astronav closeOnClick>
	  <div class="flex w-full lg:w-auto justify-between">
		<img src="./v-sekai-logo.svg" alt="V-Sekai Logo" width="50" height="50"/>

		<div class="block lg:hidden">
		  <MenuIcon class="w-8 h-8 text-gray-100" />
		</div>
	  </div>
	  <MenuItems class="hidden lg:flex ">
		<ul class="flex flex-col lg:flex-row lg:gap-5">
		  <li>
			<a href="/">Home</a>
		  </li>
		  <li>
			<a href="/about">about</a>
		  </li>
		  <li>
			<a href="/download">download</a>
		  </li>
		  <li>
			<Dropdown class="group">
			  <button class="flex items-center">
				<span> More info</span>
				<svg
				  xmlns="http://www.w3.org/2000/svg"
				  fill="none"
				  viewBox="0 0 24 24"
				  stroke-width="3"
				  stroke="currentColor"
				  class="w-3 h-3 mt-0.5 group-open:rotate-180">
				  <path
					stroke-linecap="round"
					stroke-linejoin="round"
					d="M19.5 8.25l-7.5 7.5-7.5-7.5"></path>
				</svg>
			  </button>
			  <DropdownItems class="relative">
				<div
				  class="lg:absolute bg-white top-2 w-40 border shadow rounded p-2">
				  <ul>
					<li>
					  <a href="#">Menu 1</a>
					</li>
					<li>
					  <a href="#">Menu 2</a>
					</li>
					<li>
					  <DropdownSubmenu class="group/submenu">
						<button class="flex w-full items-center justify-between">
						  <span> Dropdown</span>
						  <svg
							xmlns="http://www.w3.org/2000/svg"
							fill="none"
							viewBox="0 0 24 24"
							stroke-width="3"
							stroke="currentColor"
							class="w-3 h-3 mt-0.5 group-open/submenu:rotate-180">
							<path
							  stroke-linecap="round"
							  stroke-linejoin="round"
							  d="M8.25 4.5l7.5 7.5-7.5 7.5"></path>
						  </svg>
						</button>
						<DropdownItems class="relative">
						  <ul
							class="lg:absolute bg-white top-0 left-full w-40 border shadow rounded p-2">
							<li>
							  <a href="#">Submenu 1</a>
							</li>
							<li>
							  <a href="#">Submenu 2</a>
							</li>
							<li>
							  <DropdownSubmenu class="group/nestedsubmenu">
								<button
								  class="flex w-full items-center justify-between">
								  <span> Dropdown</span>
								  <svg
									xmlns="http://www.w3.org/2000/svg"
									fill="none"
									viewBox="0 0 24 24"
									stroke-width="3"
									stroke="currentColor"
									class="w-3 h-3 mt-0.5 group-open/nestedsubmenu:rotate-180">
									<path
									  stroke-linecap="round"
									  stroke-linejoin="round"
									  d="M8.25 4.5l7.5 7.5-7.5 7.5"></path>
								  </svg>
								</button>
								<DropdownItems class="relative">
								  <ul
									class="lg:absolute bg-white top-0 left-full w-40 border shadow rounded p-2">
									<li>
									  <a href="#">Submenu 1</a>
									</li>
									<li>
									  <a href="#">Submenu 2</a>
									</li>
								  </ul>
								</DropdownItems>
							  </DropdownSubmenu>
							</li>
						  </ul>
						</DropdownItems>
					  </DropdownSubmenu>
					</li>
					<li>
					  <DropdownSubmenu class="group/submenu">
						<button class="flex w-full items-center justify-between">
						  <span> Dropdown</span>
						  <svg
							xmlns="http://www.w3.org/2000/svg"
							fill="none"
							viewBox="0 0 24 24"
							stroke-width="3"
							stroke="currentColor"
							class="w-3 h-3 mt-0.5 group-open/submenu:rotate-180">
							<path
							  stroke-linecap="round"
							  stroke-linejoin="round"
							  d="M8.25 4.5l7.5 7.5-7.5 7.5"></path>
						  </svg>
						</button>
						<DropdownItems class="relative">
						  <ul
							class="lg:absolute bg-white top-0 left-full w-40 border shadow rounded p-2">
							<li>
							  <a href="#">Submenu 1</a>
							</li>
							<li>
							  <a href="#">Submenu 2</a>
							</li>
						  </ul>
						</DropdownItems>
					  </DropdownSubmenu>
					</li>
				  </ul>
				</div>
			  </DropdownItems>
			</Dropdown>
		  </li>
		  <li>
			<Dropdown class="group">
			  <button class="flex items-center">
				<span> Services</span>
				<svg
				  xmlns="http://www.w3.org/2000/svg"
				  fill="none"
				  viewBox="0 0 24 24"
				  stroke-width="3"
				  stroke="currentColor"
				  class="w-3 h-3 mt-0.5 group-open:rotate-180">
				  <path
					stroke-linecap="round"
					stroke-linejoin="round"
					d="M19.5 8.25l-7.5 7.5-7.5-7.5"></path>
				</svg>
			  </button>
			  <DropdownItems class="relative">
				<div
				  class="lg:absolute bg-white top-2 w-40 border shadow rounded p-2">
				  <ul>
					<li>
					  <a href="#">Menu 1</a>
					</li>
					<li>
					  <a href="#">Menu 2</a>
					</li>
					<li>
					  <DropdownSubmenu class="group/submenu">
						<button class="flex w-full items-center justify-between">
						  <span> Dropdown</span>
						  <svg
							xmlns="http://www.w3.org/2000/svg"
							fill="none"
							viewBox="0 0 24 24"
							stroke-width="3"
							stroke="currentColor"
							class="w-3 h-3 mt-0.5 group-open/submenu:rotate-180">
							<path
							  stroke-linecap="round"
							  stroke-linejoin="round"
							  d="M8.25 4.5l7.5 7.5-7.5 7.5"></path>
						  </svg>
						</button>
						<DropdownItems class="relative">
						  <ul
							class="lg:absolute bg-white top-0 left-full w-40 border shadow rounded p-2">
							<li>
							  <a href="#">Submenu 1</a>
							</li>
							<li>
							  <a href="#">Submenu 2</a>
							</li>
						  </ul>
						</DropdownItems>
					  </DropdownSubmenu>
					</li>
				  </ul>
				</div>
			  </DropdownItems>
			</Dropdown>

			<li>
				<a class="blue-header" href="https://discord.gg/7BQDHesck8"> V-Sekai discord server! </a>
			</li>
		  </li>
		</ul>
	  </MenuItems>
	</Astronav>
  </header>
<style>
	.blue-header {
		color: rgb(25, 0, 255);
		text-decoration: underline;
		border-radius: 6px;
		border: 2px solid rgba(122, 24, 168, 0);
	}
	.blue-header:hover {
		color: rgb(65, 21, 187);
		border: 2px solid rgb(123, 24, 168);
	}
	li {
		font-size: 1.5rem;
	}
	li:hover {
		color: rgb(119, 35, 158);
		
	}
	button {
		align-items: center;
		align-self: center;
		background-color: rgba(201, 57, 57, 0.178);
		color: white;
		border-radius: 6px;
		padding-inline: 1rem;
	}
	a {
		padding-inline: 1rem;
	}
	button:hover {
		background-color: rgb(194, 61, 199);
		color: rgb(255, 255, 255);
	}
</style>